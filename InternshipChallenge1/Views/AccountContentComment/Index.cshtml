@model IEnumerable<AccountContentCommentDto>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Accounts content list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="AccountContentComment" asp-action="Create" class="btn btn-primary">Create new content</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.AccountsContentId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccountsContent)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.AccountsContentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountsContent.AccountsContentId)
                            </td>*@
                        <td>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.AccountContentCommentId">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>


